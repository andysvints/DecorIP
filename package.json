{
  "name": "decorip",
  "displayName": "DecorIP",
  "description": "Decorates IP addresses with additional information such as country and ASN (Autonomous System Number)",
  "icon": "assets/DecorIP.png",
  "version": "0.0.1",
  "publisher": "andysvints",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "keywords": [
    "IP",
    "IP Address",
    "IP Decorator",
    "Public IP",
    "IPv4",
    "IPv6",
    "Geolocation",
    "Logs",
    "Network"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "DecorIP",
      "properties": {
        "DecorIP.showIcon": {
          "type": "boolean",
          "default": true,
          "description": "Show the icon next to IP addresses."
        },
        "DecorIP.icon": {
          "type": "string",
          "default": "üìç",
          "description": "Icon to show next to IP addresses."
        },
        "DecorIP.showDecorationText": {
          "type": "boolean",
          "default": true,
          "title": "Show IP Decoration Text",
          "description": "Show decoration text in the editor next to IP addresses."
      }
      }
    },
    "commands": [

    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.14.8",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "files": [
    "out",
    "data", 
    "src"
  ],
  "dependencies": {
    "maxmind": "^4.3.20"
  }
}
